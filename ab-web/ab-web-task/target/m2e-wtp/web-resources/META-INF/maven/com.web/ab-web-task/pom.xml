<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>ab-web</artifactId>
        <groupId>com.aibang</groupId>
        <version>1.0.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.web</groupId>
    <artifactId>ab-web-task</artifactId>
    <packaging>war</packaging>
    <dependencies>
        <dependency>
            <groupId>com.framework</groupId>
            <artifactId>ab-framework-exception</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>com.framework</groupId>
            <artifactId>ab-framework-utils</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>com.business</groupId>
            <artifactId>ab-business-api</artifactId>
            <version>1.0.0</version>
        </dependency> 
        <dependency>
            <groupId>com.framework</groupId>
            <artifactId>ab-framework-web</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!-- 定时任务 -->
        <dependency>
            <groupId>org.opensymphony.quartz</groupId>
            <artifactId>quartz-all</artifactId>
            <version>1.6.1</version>
        </dependency>
    </dependencies>
    <profiles>
        <profile>
            <id>develope</id>
            <properties>
                <zookeeper.url>127.0.0.1:2181</zookeeper.url>
                <redis.ip>127.0.0.1</redis.ip>
                <redis.port>6379</redis.port>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>

        <profile>
            <id>test</id>
            <properties>
                <zookeeper.url>172.11.1.249:2181</zookeeper.url>
                <redis.ip>172.11.1.249</redis.ip>
                <redis.port>6379</redis.port>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <properties>
                <zookeeper.url>10.45.136.93:2181</zookeeper.url>
                <redis.ip>10.45.139.237</redis.ip>
                <redis.port>6379</redis.port>
            </properties>
        </profile>
    </profiles>

    <build>
        <finalName>ab-web-task</finalName>
        <plugins>
			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat7-maven-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<port>9010</port>
					<path>/ab-web-task</path>
					<uriEncoding>UTF-8</uriEncoding>
					<finalName>ab-web-task</finalName>
					<server>tomcat7</server>
				</configuration>
			</plugin>
		</plugins>
    </build>
</project>