<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="HjsUsersVouch">

	<resultMap id="RM_HjsUsersVouch" type="com.cifex.transfer.model.dto.HjsUsersVouch">
        <result property="id" column="ID"/>
        <result property="userId" column="USER_ID"/>
        <result property="vouchName" column="VOUCH_NAME"/>
        <result property="zhizhao" column="ZHIZHAO"/>
        <result property="zuzhidaima" column="ZUZHIDAIMA"/>
        <result property="shuiwuhao" column="SHUIWUHAO"/>
        <result property="regTime" column="REG_TIME"/>
        <result property="team" column="TEAM"/>
        <result property="scope" column="SCOPE"/>
        <result property="descr" column="DESCR"/>
        <result property="address" column="ADDRESS"/>
        <result property="contactName" column="CONTACT_NAME"/>
        <result property="contaceTel" column="CONTACE_TEL"/>
        <result property="regMoney" column="REG_MONEY"/>
        <result property="subDesc" column="SUB_DESC"/>
        <result property="lastTime" column="LAST_TIME"/>
        <result property="lastIp" column="LAST_IP"/>
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="HjsUsersVouch.columns">
	    <![CDATA[
		ID,USER_ID,VOUCH_NAME,ZHIZHAO,ZUZHIDAIMA,SHUIWUHAO,REG_TIME,TEAM,SCOPE,DESCR,ADDRESS,CONTACT_NAME,CONTACE_TEL,REG_MONEY,SUB_DESC,LAST_TIME,LAST_IP
	    ]]>
	</sql>

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="HjsUsersVouch.insert" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO hjs_users_vouch (
        	ID ,
        	USER_ID ,
        	VOUCH_NAME ,
        	ZHIZHAO ,
        	ZUZHIDAIMA ,
        	SHUIWUHAO ,
        	REG_TIME ,
        	TEAM ,
        	SCOPE ,
        	DESCR ,
        	ADDRESS ,
        	CONTACT_NAME ,
        	CONTACE_TEL ,
        	REG_MONEY ,
        	SUB_DESC ,
        	LAST_TIME ,
        	LAST_IP 
        ) VALUES (
        	#{id} ,
        	#{userId} ,
        	#{vouchName} ,
        	#{zhizhao} ,
        	#{zuzhidaima} ,
        	#{shuiwuhao} ,
        	#{regTime} ,
        	#{team} ,
        	#{scope} ,
        	#{descr} ,
        	#{address} ,
        	#{contactName} ,
        	#{contaceTel} ,
        	#{regMoney} ,
        	#{subDesc} ,
        	#{lastTime} ,
        	#{lastIp} 
        )
    ]]>
		<!--	
			oracle: order="BEFORE" SELECT sequenceName.nextval AS ID FROM DUAL 
			DB2: order="BEFORE"" values nextval for sequenceName
		<selectKey resultType="java.lang.Long" order="BEFORE" keyProperty="userId">
			SELECT sequenceName.nextval AS ID FROM DUAL 
        </selectKey>
		-->
	</insert>
    
	<update id="HjsUsersVouch.update" >
    <![CDATA[
        UPDATE hjs_users_vouch SET
	        USER_ID = #{userId} ,
	        VOUCH_NAME = #{vouchName} ,
	        ZHIZHAO = #{zhizhao} ,
	        ZUZHIDAIMA = #{zuzhidaima} ,
	        SHUIWUHAO = #{shuiwuhao} ,
	        REG_TIME = #{regTime} ,
	        TEAM = #{team} ,
	        SCOPE = #{scope} ,
	        DESCR = #{descr} ,
	        ADDRESS = #{address} ,
	        CONTACT_NAME = #{contactName} ,
	        CONTACE_TEL = #{contaceTel} ,
	        REG_MONEY = #{regMoney} ,
	        SUB_DESC = #{subDesc} ,
	        LAST_TIME = #{lastTime} ,
	        LAST_IP = #{lastIp} 
        WHERE 
	        ID = #{id} 
    ]]>
	</update>


   
	
    <update id="HjsUsersVouch.remove">
    <![CDATA[
        UPDATE hjs_users_vouch SET
	       IS_DEL=1,
	       DELETE_TIME=#{deleteTime} 
        WHERE 
        ID = #{id} 
    ]]>
    </update>
    
    
    <delete id="HjsUsersVouch.delete">
    <![CDATA[
        DELETE FROM hjs_users_vouch WHERE
        ID = #{id} 
    ]]>
    </delete>
    
    <select id="HjsUsersVouch.getById" resultMap="RM_HjsUsersVouch">
		SELECT <include refid="HjsUsersVouch.columns" />
	    <![CDATA[
		    FROM hjs_users_vouch 
	        WHERE 
		        ID = #{id} 
	    ]]>
	</select>
	
	<sql id="HjsUsersVouch.findPage.where">
		<!-- ognl访问静态方法的表达式 为class org.apache.maven.project.MavenProjectmethod(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>	      				
	       <if test="@Ognl@isNotEmpty(id)">
				AND ID = #{id}
			</if>
	       <if test="@Ognl@isNotEmpty(userId)">
				AND USER_ID = #{userId}
			</if>
	       <if test="@Ognl@isNotEmpty(vouchName)">
				AND VOUCH_NAME = #{vouchName}
			</if>
	       <if test="@Ognl@isNotEmpty(zhizhao)">
				AND ZHIZHAO = #{zhizhao}
			</if>
	       <if test="@Ognl@isNotEmpty(zuzhidaima)">
				AND ZUZHIDAIMA = #{zuzhidaima}
			</if>
	       <if test="@Ognl@isNotEmpty(shuiwuhao)">
				AND SHUIWUHAO = #{shuiwuhao}
			</if>
	       <if test="@Ognl@isNotEmpty(regTimeBegin)">
				AND REG_TIME >= #{regTimeBegin}
		   </if>
		   <if test="@Ognl@isNotEmpty(regTimeEnd)">
				AND REG_TIME &lt;= #{regTimeEnd}
		   </if>
	       <if test="@Ognl@isNotEmpty(team)">
				AND TEAM = #{team}
			</if>
	       <if test="@Ognl@isNotEmpty(scope)">
				AND SCOPE = #{scope}
			</if>
	       <if test="@Ognl@isNotEmpty(descr)">
				AND DESCR = #{descr}
			</if>
	       <if test="@Ognl@isNotEmpty(address)">
				AND ADDRESS = #{address}
			</if>
	       <if test="@Ognl@isNotEmpty(contactName)">
				AND CONTACT_NAME = #{contactName}
			</if>
	       <if test="@Ognl@isNotEmpty(contaceTel)">
				AND CONTACE_TEL = #{contaceTel}
			</if>
	       <if test="@Ognl@isNotEmpty(regMoney)">
				AND REG_MONEY = #{regMoney}
			</if>
	       <if test="@Ognl@isNotEmpty(subDesc)">
				AND SUB_DESC = #{subDesc}
			</if>
	       <if test="@Ognl@isNotEmpty(lastTimeBegin)">
				AND LAST_TIME >= #{lastTimeBegin}
		   </if>
		   <if test="@Ognl@isNotEmpty(lastTimeEnd)">
				AND LAST_TIME &lt;= #{lastTimeEnd}
		   </if>
	       <if test="@Ognl@isNotEmpty(lastIp)">
				AND LAST_IP = #{lastIp}
			</if>
		</where>
	</sql>
		
    <select id="HjsUsersVouch.findPage.count" resultType="long">
        SELECT count(*) FROM hjs_users_vouch 
		<include refid="HjsUsersVouch.findPage.where"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 offset,pageSize,lastRows 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="HjsUsersVouch.findPage" resultMap="RM_HjsUsersVouch">
    	SELECT <include refid="HjsUsersVouch.columns" />
	    FROM hjs_users_vouch 
		<include refid="HjsUsersVouch.findPage.where"/>
		
		<if test="@Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
			<if test="@Ognl@isNotEmpty(offset) and @Ognl@isNotEmpty(pageSize)">
		 limit ${offset},${pageSize}
		</if>
    </select>

	
</mapper>

