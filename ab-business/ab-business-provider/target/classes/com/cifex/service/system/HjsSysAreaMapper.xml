<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="HjsSysArea">

	<resultMap id="RM_HjsSysArea" type="com.cifex.transfer.model.dto.HjsSysArea">
        <result property="id" column="ID"/>
        <result property="areaName" column="AREA_NAME"/>
        <result property="pyName" column="PY_NAME"/>
        <result property="parentId" column="PARENT_ID"/>
        <result property="allParentid" column="ALL_PARENTID"/>
        <result property="orderId" column="ORDER_ID"/>
        <result property="layer" column="LAYER"/>
        <result property="isDel" column="IS_DEL"/>
        <result property="optId" column="OPT_ID"/>
        <result property="createTime" column="CREATE_TIME"/>
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="HjsSysArea.columns">
	    <![CDATA[
		ID,AREA_NAME,PY_NAME,PARENT_ID,ALL_PARENTID,ORDER_ID,LAYER,IS_DEL,OPT_ID,CREATE_TIME
	    ]]>
	</sql>

    <sql id="HjsSysArea.tbcolumns">
	    <![CDATA[
		tb.ID,tb.AREA_NAME,tb.PY_NAME,tb.PARENT_ID,tb.ALL_PARENTID,tb.ORDER_ID,tb.LAYER,tb.IS_DEL,tb.OPT_ID,tb.CREATE_TIME
	    ]]>
	</sql>
	
	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="HjsSysArea.insert" useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
        INSERT INTO hjs_sys_area (
        	ID ,
        	AREA_NAME ,
        	PY_NAME ,
        	PARENT_ID ,
        	ALL_PARENTID ,
        	ORDER_ID ,
        	LAYER ,
        	IS_DEL ,
        	OPT_ID ,
        	CREATE_TIME 
        ) VALUES (
        	#{id} ,
        	#{areaName} ,
        	#{pyName} ,
        	#{parentId} ,
        	#{allParentid} ,
        	#{orderId} ,
        	#{layer} ,
        	#{isDel} ,
        	#{optId} ,
        	#{createTime} 
        )
    ]]>
		<!--	
			oracle: order="BEFORE" SELECT sequenceName.nextval AS ID FROM DUAL 
			DB2: order="BEFORE"" values nextval for sequenceName
		<selectKey resultType="java.lang.Long" order="BEFORE" keyProperty="userId">
			SELECT sequenceName.nextval AS ID FROM DUAL 
        </selectKey>
		-->
	</insert>
    <!--
		描述：（后台）更新区域信息功能sql
		作者：Zhang Yong
		时间：2015.9.14
	-->
	<update id="HjsSysArea.update" >
    <![CDATA[
        UPDATE hjs_sys_area SET
	        AREA_NAME = #{areaName} ,
	        PY_NAME = #{pyName} ,
	        PARENT_ID = #{parentId} ,
	        ALL_PARENTID = #{allParentid} ,
	        ORDER_ID = #{orderId} ,
	        LAYER = #{layer} ,
	        IS_DEL = #{isDel} ,
	        OPT_ID = #{optId} ,
	        CREATE_TIME = #{createTime} 
        WHERE 
	        ID = #{id} 
    ]]>
	</update>


   
	<!--
		描述：（后台）删除区域（逻辑删除）功能sql
		作者：Zhang Yong
		时间：2015.9.14
	-->
    <update id="HjsSysArea.remove">
    <![CDATA[
        UPDATE hjs_sys_area SET
	       IS_DEL=1,
	       DELETE_TIME=#{deleteTime} 
        WHERE 
        ID = #{id} 
    ]]>
    </update>
    
    <!--
		描述：（后台）删除区域功能sql
		作者：Zhang Yong
		时间：2015.9.14
	-->
    <delete id="HjsSysArea.delete">
    <![CDATA[
        DELETE FROM hjs_sys_area WHERE
        ID = #{id} 
    ]]>
    </delete>
    <!--
		描述：（后台）通过ID获取区域信息功能sql
		作者：Zhang Yong
		时间：2015.9.14
	-->
    <select id="HjsSysArea.getById" resultMap="RM_HjsSysArea">
		SELECT <include refid="HjsSysArea.columns" />
	    <![CDATA[
		    FROM hjs_sys_area 
	        WHERE 
		        ID = #{id} 
	    ]]>
	</select>
	<!--
		描述：（前台/后台）得到所有地域功能sql
		作者：Zhang Yong
		时间：2015.9.22
	-->
	<select id="HjsSysArea.findAll" resultMap="RM_HjsSysArea">
		SELECT <include refid="HjsSysArea.columns" />
	    <![CDATA[
		    FROM hjs_sys_area 
	    ]]>
	</select>
	<!--
		描述：（前台/后台）获得某层级地域功能sql
		作者：Zhang Yong
		时间：2015.9.22
	-->
	<select id="HjsSysArea.findAreaLayer" resultMap="RM_HjsSysArea">
		SELECT <include refid="HjsSysArea.columns" /> 
		    FROM hjs_sys_area 
		    WHERE 
		    	LAYER = ${layer}
		    	<if test="parentId!=0">
		    	AND PARENT_ID = #{parentId}
		    	</if> 
		    	 
	</select>
	<sql id="HjsSysArea.findPage.where">
		<!-- ognl访问静态方法的表达式 为class org.apache.maven.project.MavenProjectmethod(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>	      				
	       <if test="@Ognl@isNotEmpty(id)">
				AND tb.ID = #{id}
			</if>
	       <if test="@Ognl@isNotEmpty(areaName)">
				AND tb.AREA_NAME = #{areaName}
			</if>
	       <if test="@Ognl@isNotEmpty(pyName)">
				AND tb.PY_NAME = #{pyName}
			</if>
	       <if test="@Ognl@isNotEmpty(parentId)">
				AND tb.PARENT_ID = #{parentId}
			</if>
	       <if test="@Ognl@isNotEmpty(allParentid)">
				AND tb.ALL_PARENTID = #{allParentid}
			</if>
	       <if test="@Ognl@isNotEmpty(orderId)">
				AND tb.ORDER_ID = #{orderId}
			</if>
	       <if test="@Ognl@isNotEmpty(layer)">
				AND tb.LAYER = #{layer}
			</if>
	       <if test="@Ognl@isNotEmpty(isDel)">
				AND tb.IS_DEL = #{isDel}
			</if>
	       <if test="@Ognl@isNotEmpty(optId)">
				AND tb.OPT_ID = #{optId}
			</if>
	       <if test="@Ognl@isNotEmpty(createTimeBegin)">
				AND tb.CREATE_TIME >= #{createTimeBegin}
		   </if>
		   <if test="@Ognl@isNotEmpty(createTimeEnd)">
				AND tb.CREATE_TIME &lt;= #{createTimeEnd}
		   </if>
		</where>
	</sql>
		
    <select id="HjsSysArea.findPage.count" resultType="long">
        SELECT count(*) FROM hjs_sys_area tb 
		<include refid="HjsSysArea.findPage.where"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 offset,pageSize,lastRows 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="HjsSysArea.findPage" resultType="map">
    	SELECT <include refid="HjsSysArea.tbcolumns" />
	    FROM hjs_sys_area tb
		<include refid="HjsSysArea.findPage.where"/>
		
		<if test="@Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
	    <if test="@Ognl@isNotEmpty(offset) and @Ognl@isNotEmpty(pageSize)">
		 limit ${offset},${pageSize}
		</if>
    </select>

	
</mapper>

