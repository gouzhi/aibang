	<session-config>
		<session-timeout>3600</session-timeout>
	</session-config>
	<servlet>
		<servlet-name>hjs_fileupload</servlet-name>
		<servlet-class>com.cifex.framework.web.servlet.FileUploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>hjs_fileupload</servlet-name>
		<url-pattern>/fileuploadServlet</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>