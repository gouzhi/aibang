    <select id="HjsUsersInfo.findPage.count" resultType="long">
        SELECT count(*) FROM hjs_users_info i
	    left join hjs_user u on i.LOGIN_ID=u.ID 
	    left join hjs_user_base b on i.USER_ID = b.ID 
	    left join hjs_sys_area a on i.AREAID=a.ID
		<include refid="HjsUsersInfo.findPage.where"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 offset,pageSize,lastRows 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="HjsUsersInfo.findPage" resultMap="RM_HjsUsersInfoPage">
    	SELECT <include refid="HjsUsersInfo.columnsPage" />
	    FROM hjs_users_info i
	    left join hjs_user u on i.LOGIN_ID=u.ID 
	    left join hjs_user_base b on i.USER_ID = b.ID 
	    left join hjs_sys_area a on i.AREAID=a.ID
	    left join hjs_users_invite tb on i.USER_ID=tb.USER_ID
		<include refid="HjsUsersInfo.findPage.where"/>
		<if test="@Ognl@isNotEmpty(phone)">
				AND tb.INVITE_USER_ID IN (SELECT b.ID 
												FROM hjs_user u
												LEFT JOIN hjs_users_info i ON u.ID = i.LOGIN_ID
												LEFT JOIN hjs_user_base b ON b.ID = i.USER_ID
												WHERE u.PHONE LIKE CONCAT(CONCAT('%', #{phone}), '%') OR u.USERNAME LIKE CONCAT(CONCAT('%', #{phone}), '%'))
		</if>
		
		<if test="@Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
		
		<if test="@Ognl@isNotEmpty(offset) and @Ognl@isNotEmpty(pageSize)">
		 limit ${offset},${pageSize}
		</if>
    </select>
	
	<!-- 通过用户的baseid获得用户的手机号 -->
	<select id="HjsUsersInfo.getUserPhoneByUserBaseId" resultType="string">
		SELECT u.PHONE
			FROM hjs_users_info i
			LEFT JOIN hjs_user u ON u.ID = i.LOGIN_ID 
			WHERE i.USER_ID = #{userId}
	</select>
	
</mapper>

