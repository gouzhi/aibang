<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
     <parent>
        <artifactId>ab-web</artifactId>
        <groupId>com.aibang</groupId>
        <version>1.0.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.web</groupId>
    <artifactId>ab-web-daemon</artifactId>
    <packaging>war</packaging>
    <dependencies>
        <dependency>
            <groupId>com.framework</groupId>
            <artifactId>ab-framework-exception</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>com.framework</groupId>
            <artifactId>ab-framework-utils</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>com.business</groupId>
            <artifactId>ab-business-api</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>com.framework</groupId>
            <artifactId>ab-framework-web</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <version>3.1.0</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>develope</id>
            <properties>
                <zookeeper.url>127.0.0.1:2181</zookeeper.url>
                <memcache.ip>172.11.1.249</memcache.ip>
                <memcache.port>11211</memcache.port>
                <redis.ip>172.11.1.249</redis.ip>
                <redis.port>6379</redis.port>
                <activemq.url>tcp://localhost:61616</activemq.url>

                <css.image.domain>/static</css.image.domain>
                <web.domain>.cifex.com</web.domain>
                <web.name>daemon</web.name>
                <project.name></project.name>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>

        <profile>
            <id>test</id>
            <properties>
                <zookeeper.url>172.11.1.249:2181</zookeeper.url>
                <memcache.ip>172.11.1.249</memcache.ip>
                <memcache.port>11211</memcache.port>
                <redis.ip>172.11.1.249</redis.ip>
                <redis.port>6379</redis.port>
                <activemq.url>tcp://172.11.1.249:61616</activemq.url>

                <css.image.domain>/static</css.image.domain>
                <web.domain>.ab.com</web.domain>
                <web.name>daemon</web.name>
                <project.name></project.name>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <properties>
                <zookeeper.url>10.45.139.237:2181</zookeeper.url>
                <memcache.ip>10.45.139.237</memcache.ip>
                <memcache.port>11211</memcache.port>
                <redis.ip>10.45.139.237</redis.ip>
                <redis.port>6379</redis.port>
                <activemq.url>tcp://10.45.136.93:61616</activemq.url>
                <css.image.domain>/static</css.image.domain>
                <web.domain>.huafax.com</web.domain>
                <web.name>daemon</web.name>
                <project.name></project.name>
            </properties>
        </profile>
    </profiles>
	
	<build>
        <finalName>ab-web-daemon</finalName>
        <plugins>
			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat7-maven-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<port>9008</port>
					<path>ab-web-daemon</path>
					<uriEncoding>UTF-8</uriEncoding>
					<finalName>ab-web-daemon</finalName>
					<server>tomcat7</server>
				</configuration>
			</plugin>
		</plugins>
    </build>
</project>